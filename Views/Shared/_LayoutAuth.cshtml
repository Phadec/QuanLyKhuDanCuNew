<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Hệ thống quản lý khu dân cư" />
    <meta name="author" content="" />
    <title>@ViewData["Title"] - Quản lý khu dân cư</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <style>
        :root {
            --primary-color: #3498db;
            --primary-dark: #2980b9;
            --secondary-color: #2c3e50;
            --light-color: #ecf0f1;
            --success-color: #2ecc71;
            --danger-color: #e74c3c;
            --warning-color: #f39c12;
        }
        
        body {
            font-family: 'Roboto', sans-serif;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        
        .auth-logo {
            text-align: center;
            margin-bottom: 1.5rem;
        }
        
        .auth-logo img {
            max-width: 100px;
            margin-bottom: 1rem;
        }
        
        .brand-text {
            color: white;
            font-weight: 300;
            margin-bottom: 0;
        }
        
        .auth-card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            overflow: hidden;
            animation: fadeIn 0.5s ease-out;
        }
        
        .auth-card-header {
            background-color: white;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
            padding: 1.5rem 1.5rem 1rem;
        }
        
        .auth-card-body {
            padding: 2rem;
        }
        
        .auth-card-footer {
            background-color: rgba(0, 0, 0, 0.02);
            border-top: 1px solid rgba(0, 0, 0, 0.05);
        }
        
        .auth-form-floating > label {
            padding-left: 1rem;
        }
        
        .auth-form-floating > .form-control {
            padding-left: 1rem;
        }
        
        .auth-btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
            transition: all 0.3s ease;
            font-weight: 500;
            letter-spacing: 0.5px;
        }
        
        .auth-btn-primary:hover {
            background-color: var(--primary-dark);
            border-color: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        
        .auth-btn-link {
            color: var(--primary-color);
            text-decoration: none;
        }
        
        .auth-btn-link:hover {
            color: var(--primary-dark);
            text-decoration: underline;
        }
        
        .auth-password-container {
            position: relative;
        }
        
        .auth-toggle-password {
            position: absolute;
            right: 0.5rem;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: #6c757d;
            cursor: pointer;
            z-index: 10;
        }
        
        .auth-toggle-password:hover {
            color: var(--primary-color);
        }
        
        .auth-validation-error {
            color: var(--danger-color);
            font-size: 0.875rem;
            display: block;
            margin-top: 0.25rem;
        }
        
        .auth-validation-summary {
            color: var(--danger-color);
            background-color: rgba(231, 76, 60, 0.1);
            padding: 1rem;
            border-radius: 0.25rem;
            margin-bottom: 1.5rem;
        }
        
        .auth-validation-summary ul {
            margin-bottom: 0;
            padding-left: 1rem;
        }
        
        #layoutAuthentication {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        
        #layoutAuthentication_content {
            flex: 1 0 auto;
            padding-top: 3rem;
            padding-bottom: 3rem;
        }
        
        #layoutAuthentication_footer {
            min-width: 0;
        }
        
        .auth-footer {
            background-color: rgba(255, 255, 255, 0.05) !important;
            color: rgba(255, 255, 255, 0.7) !important;
        }
        
        .auth-footer a {
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
        }
        
        .auth-footer a:hover {
            color: white;
            text-decoration: underline;
        }
        
        .auth-modal-content {
            border-radius: 10px;
            border: none;
        }
        
        .auth-modal-header {
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
            background-color: var(--primary-color);
            color: white;
            border-radius: 10px 10px 0 0;
        }
        
        .auth-modal-footer {
            border-top: 1px solid rgba(0, 0, 0, 0.05);
        }
        
        .auth-btn-close {
            filter: brightness(0) invert(1);
        }
        
        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        @@media (max-width: 576px) {
            .auth-card-body {
                padding: 1.5rem;
            }
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                @RenderBody()
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="auth-footer py-3 mt-auto">
                <div class="container">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div>Bản quyền &copy; Quản lý khu dân cư @DateTime.Now.Year</div>
                        <div>
                            <a href="#">Chính sách bảo mật</a> &middot;
                            <a href="#">Điều khoản &amp; Điều kiện</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>