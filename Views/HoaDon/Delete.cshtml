@model QuanLyKhuDanCu.Models.HoaDon
@{
    ViewData["Title"] = "Xóa hóa đơn";
}

<div class="container-fluid">
    <h1 class="mt-4">Xóa hóa đơn</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Quản lý hóa đơn</a></li>
        <li class="breadcrumb-item active">Xóa hóa đơn</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header bg-danger text-white">
            <i class="fas fa-exclamation-triangle mr-1"></i>
            Xác nhận xóa
        </div>
        <div class="card-body">
            <div class="alert alert-danger">
                <h4><i class="fas fa-exclamation-circle mr-1"></i> Bạn có chắc chắn muốn xóa hóa đơn này?</h4>
                <p>Hành động này không thể hoàn tác.</p>
            </div>

            <h5 class="mt-4">Thông tin hóa đơn</h5>
            <dl class="row">
                <dt class="col-sm-3">Mã hóa đơn:</dt>
                <dd class="col-sm-9">@Model.MaHoaDon</dd>

                <dt class="col-sm-3">Hộ khẩu:</dt>
                <dd class="col-sm-9">@Model.HoKhau.MaHoKhau - @Model.HoKhau.DiaChi</dd>

                <dt class="col-sm-3">Loại phí:</dt>
                <dd class="col-sm-9">@Model.LoaiPhi.TenLoaiPhi</dd>

                <dt class="col-sm-3">Số tiền:</dt>
                <dd class="col-sm-9">@Model.TongTien.ToString("N0") VNĐ</dd>

                <dt class="col-sm-3">Ngày tạo:</dt>
                <dd class="col-sm-9">@Model.NgayTao.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Hạn thanh toán:</dt>
                <dd class="col-sm-9">@Model.HanThanhToan.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Trạng thái:</dt>
                <dd class="col-sm-9">
                    @if (Model.TrangThai == "ChuaThanhToan")
                    {
                        <span class="badge badge-warning">Chưa thanh toán</span>
                    }
                    else if (Model.TrangThai == "QuaHan")
                    {
                        <span class="badge badge-danger">Quá hạn</span>
                    }
                </dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="HoaDonId" />
                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash mr-1"></i> Xóa
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left mr-1"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
