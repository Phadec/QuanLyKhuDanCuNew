@model QuanLyKhuDanCu.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Thống kê tổng quan";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h        // Biểu đồ giới tính
        var genderLabels = [@Html.Raw(string.Join(",", Model.ThongKeGioiTinh.Keys.Select(k => "'" + k + "'")))];
        var genderData = [@Html.Raw(string.Join(",", Model.ThongKeGioiTinh.Values))];
        
        var genderCtx = document.getElementById('genderChart').getContext('2d');
        var genderChart = new Chart(genderCtx, {
            type: 'pie',
            data: {
                labels: genderLabels,
                datasets: [{
                    data: genderData,
                    backgroundColor: ['#4e73df', '#1cc88a', '#36b9cc'],
                    hoverBackgroundColor: ['#2e59d9', '#17a673', '#2c9faf'],
                    hoverBorderColor: "rgba(234, 236, 244, 1)",
                }],
            },ray-800">Thống kê tổng quan</h1>
        <div class="btn-group" role="group">
            <a asp-action="DanCu" class="btn btn-outline-primary">Dân cư</a>
            <a asp-action="ThuPhi" class="btn btn-outline-primary">Thu phí</a>
            <a asp-action="YeuCauDichVu" class="btn btn-outline-primary">Yêu cầu dịch vụ</a>
        </div>
    </div>

    <!-- Content Row -->
    <div class="row">
        <!-- Tổng số hộ khẩu -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Tổng số hộ khẩu</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TongSoHoKhau</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-home fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tổng số nhân khẩu -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Tổng số nhân khẩu</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TongSoNhanKhau</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tạm trú/tạm vắng -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Đơn tạm trú/tạm vắng</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TongSoDonTamTruTamVang</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Hóa đơn chưa thanh toán -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Hóa đơn chưa thanh toán</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.HoaDonChuaThanhToan</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-exclamation-triangle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Yêu cầu dịch vụ -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-secondary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-secondary text-uppercase mb-1">
                                Yêu cầu dịch vụ</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TongSoYeuCauDichVu</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-concierge-bell fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Phản ánh -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-dark shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-dark text-uppercase mb-1">
                                Phản ánh & góp ý</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TongSoPhanAnh</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-comments fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Thu nhập tháng này -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Thu nhập tháng này</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TongThuTheoThang.ToString("N0") VNĐ</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Thu nhập năm nay -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Thu nhập năm nay</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TongThuTheoNam.ToString("N0") VNĐ</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-chart-line fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Content Row -->
    <div class="row">
        <!-- Biểu đồ giới tính -->
        <div class="col-xl-4 col-lg-5">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Thống kê theo giới tính</h6>
                </div>
                <div class="card-body">
                    <div class="chart-pie pt-4 pb-2">
                        <canvas id="genderChart"></canvas>
                    </div>
                    <div class="mt-4 text-center small">
                        @foreach (var item in Model.ThongKeGioiTinh)
                        {
                            <span class="mr-2">
                                <i class="fas fa-circle text-primary"></i> @item.Key: @item.Value
                            </span>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Biểu đồ tạm trú/tạm vắng -->
        <div class="col-xl-4 col-lg-5">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Tạm trú - Tạm vắng</h6>
                </div>
                <div class="card-body">
                    <div class="chart-pie pt-4 pb-2">
                        <canvas id="residenceChart"></canvas>
                    </div>
                    <div class="mt-4 text-center small">
                        @foreach (var item in Model.ThongKeTamTruTamVang)
                        {
                            <span class="mr-2">
                                <i class="fas fa-circle text-success"></i> @item.Key: @item.Value
                            </span>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Thông tin hệ thống -->
        <div class="col-xl-4 col-lg-2">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Thông tin hệ thống</h6>
                </div>
                <div class="card-body">
                    <p><strong>Ngày cập nhật:</strong> @DateTime.Now.ToString("dd/MM/yyyy")</p>
                    <p><strong>Thời gian:</strong> @DateTime.Now.ToString("HH:mm:ss")</p>
                    <p><strong>Phiên bản:</strong> 1.0.0</p>
                    <div class="mt-3">
                        <a asp-action="ExportData" asp-route-type="excel" class="btn btn-primary btn-sm">
                            <i class="fas fa-download"></i> Xuất Excel
                        </a>
                        <a asp-action="ExportData" asp-route-type="pdf" class="btn btn-secondary btn-sm">
                            <i class="fas fa-file-pdf"></i> Xuất PDF
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>    <script>
        // Biểu đồ giới tính
        var genderCtx = document.getElementById('genderChart').getContext('2d');
        var genderLabels = [@Html.Raw(string.Join(",", Model.ThongKeGioiTinh.Keys.Select(k => "\"" + k + "\"")))];
        var genderData = [@Html.Raw(string.Join(",", Model.ThongKeGioiTinh.Values))];
        var genderChart = new Chart(genderCtx, {
            type: 'pie',
            data: {
                labels: genderLabels,
                datasets: [{
                    data: genderData,
                    backgroundColor: ['#4e73df', '#1cc88a', '#36b9cc'],
                    hoverBackgroundColor: ['#2e59d9', '#17a673', '#2c9faf'],
                    hoverBorderColor: "rgba(234, 236, 244, 1)",
                }],
            },
            options: {
                maintainAspectRatio: false,
                tooltips: {
                    backgroundColor: "rgb(255,255,255)",
                    bodyFontColor: "#858796",
                    borderColor: '#dddfeb',
                    borderWidth: 1,
                    xPadding: 15,
                    yPadding: 15,
                    displayColors: false,
                    caretPadding: 10,
                },
                legend: {
                    display: false
                },
                cutoutPercentage: 0,
            },
        });        // Biểu đồ tạm trú/tạm vắng
        var residenceCtx = document.getElementById('residenceChart').getContext('2d');
        var residenceLabels = [@Html.Raw(string.Join(",", Model.ThongKeTamTruTamVang.Keys.Select(k => "\"" + k + "\"")))];
        var residenceData = [@Html.Raw(string.Join(",", Model.ThongKeTamTruTamVang.Values))];
        var residenceChart = new Chart(residenceCtx, {
            type: 'pie',
            data: {
                labels: residenceLabels,
                datasets: [{
                    data: residenceData,
                    backgroundColor: ['#1cc88a', '#f6c23e'],
                    hoverBackgroundColor: ['#17a673', '#f4b619'],
                    hoverBorderColor: "rgba(234, 236, 244, 1)",
                }],
            },
            options: {
                maintainAspectRatio: false,
                tooltips: {
                    backgroundColor: "rgb(255,255,255)",
                    bodyFontColor: "#858796",
                    borderColor: '#dddfeb',
                    borderWidth: 1,
                    xPadding: 15,
                    yPadding: 15,
                    displayColors: false,
                    caretPadding: 10,
                },
                legend: {
                    display: false
                },
                cutoutPercentage: 0,
            },
        });
    </script>
}
