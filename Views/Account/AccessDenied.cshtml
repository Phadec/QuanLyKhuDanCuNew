@{
    ViewData["Title"] = "Truy cập bị từ chối";
}

<div class="container-fluid">
    <div class="text-center mt-5">
        <div class="error mx-auto" data-text="403">403</div>
        <p class="lead text-gray-800 mb-4">Truy cập bị từ chối</p>
        <p class="text-gray-500 mb-0">Bạn không có quyền truy cập vào trang này.</p>
        <p class="text-gray-500 mb-4">Có thể bạn chưa được liên kết với hộ khẩu nào trong hệ thống.</p>
        <a href="/" class="btn btn-primary">&larr; Quay lại trang chủ</a>
    </div>
</div>

@section Styles {
