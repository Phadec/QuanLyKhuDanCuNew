@model QuanLyKhuDanCu.Helpers.PaginatedList<QuanLyKhuDanCu.Models.HoKhau>

@{
    ViewData["Title"] = "Danh sách hộ khẩu";
    // Define currentSort at the parent scope level so it's available throughout the page
    var currentSort = ViewData["CurrentSort"] as string ?? "";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Tạo mới</a>
</p>

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-search me-1"></i>
        Tìm kiếm
    </div>
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-8">
                <div class="input-group">
                    <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Tìm theo mã, địa chỉ hoặc chủ hộ..." />
                    <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i> Tìm kiếm</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-redo"></i> Làm mới</a>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Danh sách hộ khẩu
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["MaSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                                Mã hộ khẩu
                                @{
                                    if (currentSort == "")
                                    {
                                        <i class="fas fa-sort-up"></i>
                                    }
                                    else if (currentSort == "ma_desc")
                                    {
                                        <i class="fas fa-sort-down"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort"></i>
                                    }
                                }
                            </a>
                        </th>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["ChuHoSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                                Chủ hộ
                                @if (currentSort == "ChuHo")
                                {
                                    <i class="fas fa-sort-up"></i>
                                }
                                else if (currentSort == "chuho_desc")
                                {
                                    <i class="fas fa-sort-down"></i>
                                }
                                else
                                {
                                    <i class="fas fa-sort"></i>
                                }
                            </a>
                        </th>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["DiaChiSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                                Địa chỉ
                                @if (currentSort == "DiaChi")
                                {
                                    <i class="fas fa-sort-up"></i>
                                }
                                else if (currentSort == "diachi_desc")
                                {
                                    <i class="fas fa-sort-down"></i>
                                }
                                else
                                {
                                    <i class="fas fa-sort"></i>
                                }
                            </a>
                        </th>
                        <th>Số nhân khẩu</th>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["NgayTaoSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                                Ngày tạo
                                @if (currentSort == "NgayTao")
                                {
                                    <i class="fas fa-sort-up"></i>
                                }
                                else if (currentSort == "ngaytao_desc")
                                {
                                    <i class="fas fa-sort-down"></i>
                                }
                                else
                                {
                                    <i class="fas fa-sort"></i>
                                }
                            </a>
                        </th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>@item.MaHoKhau</td>
                        <td>@(item.ChuHo?.HoTen ?? "Không có")</td>
                        <td>@item.DiaChi</td>
                        <td>@(item.NhanKhaus?.Count ?? 0)</td>
                        <td>@item.NgayTao.ToString("dd/MM/yyyy")</td>
                        <td>
                            @if (item.TrangThai)
                            {
                                <span class="badge bg-success">Hoạt động</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Đã khóa</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.HoKhauId" class="btn btn-sm btn-primary" title="Sửa">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.HoKhauId" class="btn btn-sm btn-info" title="Chi tiết">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.HoKhauId" class="btn btn-sm btn-danger" title="Xóa">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>

        @{
            var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
            var nextDisabled = !Model.HasNextPage ? "disabled" : "";
        }

        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item @prevDisabled">
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                       asp-route-pageNumber="@(Model.PageIndex - 1)"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       class="page-link @prevDisabled">
                        Trước
                    </a>
                </li>

                @for (var i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(Model.PageIndex == i ? "active" : "")">
                        <a asp-action="Index"
                           asp-route-sortOrder="@ViewData["CurrentSort"]"
                           asp-route-pageNumber="@i"
                           asp-route-currentFilter="@ViewData["CurrentFilter"]"
                           class="page-link">
                            @i
                        </a>
                    </li>
                }

                <li class="page-item @nextDisabled">
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                       asp-route-pageNumber="@(Model.PageIndex + 1)"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       class="page-link @nextDisabled">
                        Tiếp
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>
