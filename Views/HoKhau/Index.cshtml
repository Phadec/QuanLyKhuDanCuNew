@model IEnumerable<QuanLyKhuDanCu.Models.HoKhau>
@{
    ViewData["Title"] = "Quản lý Hộ khẩu";
}

<div class="container-fluid">
    <h1 class="mt-4">Quản lý Hộ khẩu</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
        <li class="breadcrumb-item active">Hộ khẩu</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div>
                <i class="fas fa-table me-1"></i> Danh sách Hộ khẩu
            </div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> Tạo Hộ khẩu mới
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Mã Hộ khẩu</th>
                            <th>Chủ hộ</th>
                            <th>Địa chỉ</th>
                            <th>Số Nhân khẩu</th>
                            <th>Ngày tạo</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.MaHoKhau)</td>
                                <td>@Html.DisplayFor(modelItem => item.ChuHo.HoTen)</td>
                                <td>@Html.DisplayFor(modelItem => item.DiaChi)</td>
                                <td>
                                    <span class="badge bg-info">@item.NhanKhaus.Count() người</span>
                                </td>
                                <td>@item.NgayTao.ToString("dd/MM/yyyy")</td>
                                <td>
                                    @if (item.TrangThai)
                                    {
                                        <span class="badge bg-success">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Không hoạt động</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.HoKhauId" class="btn btn-sm btn-info" title="Chi tiết">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.HoKhauId" class="btn btn-sm btn-warning" title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.HoKhauId" class="btn btn-sm btn-danger" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
