@model QuanLyKhuDanCu.Models.HoKhau

@{
    ViewData["Title"] = "Chi tiết hộ khẩu";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-home me-1"></i>
                Thông tin hộ khẩu
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Mã hộ khẩu:</dt>
                    <dd class="col-sm-8">@Model.MaHoKhau</dd>
                    
                    <dt class="col-sm-4">Địa chỉ:</dt>
                    <dd class="col-sm-8">@Model.DiaChi</dd>
                    
                    <dt class="col-sm-4">Chủ hộ:</dt>
                    <dd class="col-sm-8">@Model.ChuHo.HoTen</dd>
                    
                    <dt class="col-sm-4">Ngày tạo:</dt>
                    <dd class="col-sm-8">@Model.NgayTao.ToString("dd/MM/yyyy")</dd>
                    
                    <dt class="col-sm-4">Trạng thái:</dt>
                    <dd class="col-sm-8">
                        @if (Model.TrangThai)
                        {
                            <span class="badge bg-success">Hoạt động</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Đã khóa</span>
                        }
                    </dd>
                    
                    <dt class="col-sm-4">Ghi chú:</dt>
                    <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.GhiChu) ? "Không có" : Model.GhiChu)</dd>
                </dl>
            </div>
            <div class="card-footer">
                <a asp-action="Edit" asp-route-id="@Model.HoKhauId" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Sửa
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại danh sách
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-users me-1"></i>
                Danh sách nhân khẩu
            </div>
            <div class="card-body">
                <a asp-controller="NhanKhau" asp-action="Create" asp-route-hoKhauId="@Model.HoKhauId" class="btn btn-success mb-3">
                    <i class="fas fa-plus"></i> Thêm nhân khẩu
                </a>
                
                @if (Model.NhanKhaus.Count == 0)
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> Chưa có nhân khẩu trong hộ khẩu này.
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-primary">
                                <tr>
                                    <th>Họ tên</th>
                                    <th>Quan hệ với chủ hộ</th>
                                    <th>Ngày sinh</th>
                                    <th>Giới tính</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.NhanKhaus.OrderBy(n => n.QuanHeVoiChuHo == "Chủ hộ" ? 0 : 1))
                                {
                                    <tr>
                                        <td>@item.HoTen</td>
                                        <td>@item.QuanHeVoiChuHo</td>
                                        <td>@item.NgaySinh.ToString("dd/MM/yyyy")</td>
                                        <td>@item.GioiTinh</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-controller="NhanKhau" asp-action="Details" asp-route-id="@item.NhanKhauId" class="btn btn-sm btn-info">
                                                    <i class="fas fa-info-circle"></i>
                                                </a>
                                                <a asp-controller="NhanKhau" asp-action="Edit" asp-route-id="@item.NhanKhauId" class="btn btn-sm btn-primary">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
