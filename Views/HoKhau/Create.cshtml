@model QuanLyKhuDanCu.ViewModels.CreateHoKhauViewModel
@{
    ViewData["Title"] = "Tạo hộ khẩu mới";
}

<div class="container-fluid">
    <h1 class="mt-4">Tạo hộ khẩu mới</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Hộ khẩu</a></li>
        <li class="breadcrumb-item active">Tạo mới</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-plus me-1"></i> Thông tin hộ khẩu
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="MaHoKhau" class="control-label"></label>
                            <input asp-for="MaHoKhau" class="form-control" />
                            <span asp-validation-for="MaHoKhau" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="ChuHoId" class="control-label"></label>
                            <select asp-for="ChuHoId" class="form-select" asp-items="ViewBag.ChuHoId">
                                <option value="">-- Chọn chủ hộ --</option>
                            </select>
                            <span asp-validation-for="ChuHoId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DiaChi" class="control-label"></label>
                    <input asp-for="DiaChi" class="form-control" />
                    <span asp-validation-for="DiaChi" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="GhiChu" class="control-label"></label>
                    <textarea asp-for="GhiChu" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="GhiChu" class="text-danger"></span>
                </div>

                <div class="form-group form-check mb-3">
                    <input class="form-check-input" asp-for="TrangThai" />
                    <label class="form-check-label" asp-for="TrangThai">
                        Hoạt động
                    </label>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Tạo mới
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
